# Uncomment the next line to define a global platform for your project
# platform :ios, '9.0'

target 'Brouhaha' do
  # Comment the next line if you're not using Swift and don't want to use dynamic frameworks
  use_frameworks!

  # Pods for Brouhaha
  pod 'Firebase/Core'
  pod 'Firebase/Database'
  pod 'Firebase/Storage'
  pod 'MJRefresh'
  pod 'RGSColorSlider'
  pod 'SwiftLint'
  pod 'GooglePlaces'
  pod 'GoogleMaps'
  pod 'SwiftyJSON'
  pod 'GeoFire', '>= 1.1'

  target 'BrouhahaTests' do
    inherit! :search_paths
    # Pods for testing
  end

  target 'BrouhahaUITests' do
    inherit! :search_paths
    # Pods for testing
    pod 'Firebase/Core'
    pod 'Firebase/Database' 
    pod 'Firebase/Storage'
    pod 'MJRefresh'
    pod 'RGSColorSlider'
    pod 'GooglePlaces'
    pod 'GoogleMaps'
    pod 'SwiftyJSON'
    pod 'GeoFire', '>= 1.1'
  end

end
